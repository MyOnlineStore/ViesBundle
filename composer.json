{
    "name": "sandwich/vies-bundle",
    "description": "Symfony bundle for the Vies Package to validate VAT numbers",
    "minimum-stability": "stable",
    "license": "MIT",
    "type": "symfony-bundle",
    "authors": [
        {
            "name": "Sandwich BV",
            "email": "info@myonlinestore.com"
        }
    ],
    "require": {
        "php": ">=7.0",
        "dragonbe/vies": "^1.0",
        "symfony/dependency-injection": "^2.8||^3.0||^4.0",
        "symfony/validator": "^2.8||^3.0||^4.0"
    },
    "require-dev": {
        "roave/security-advisories": "dev-master",
        "phpunit/phpunit": "~5.7",
        "escapestudios/symfony2-coding-standard": "3.0",
        "phpmd/phpmd": "^2.6",
        "squizlabs/php_codesniffer": "3.1.*"
    },
    "autoload": {
        "psr-4": { "Sandwich\\ViesBundle\\": "src" }
    },
    "autoload-dev": {
        "psr-4": {
            "Sandwich\\ViesBundle\\Tests\\": "tests"
        }
    },
    "config": {
        "vendor-dir": "vendor",
        "sort-packages": true
    }
}
