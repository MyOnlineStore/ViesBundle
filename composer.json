{
    "name": "sandwich/vies-bundle",
    "description": "Symfony bundle for the Vies Package to validate VAT numbers",
    "minimum-stability": "stable",
    "license": "MIT",
    "type": "symfony-bundle",
    "authors": [
        {
            "name": "Sandwich BV",
            "email": "info@myonlinestore.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "dragonbe/vies": "^2.1",
        "symfony/config": "^5.0 || ^6.0",
        "symfony/dependency-injection": "^5.0 || ^6.0",
        "symfony/http-kernel": "^5.0 || ^6.0",
        "symfony/validator": "^5.0 || ^6.0"
    },
    "require-dev": {
        "myonlinestore/coding-standard": "^4.0",
        "myonlinestore/php-devtools": "^0.3.7",
        "phpunit/phpunit": "^10.0",
        "roave/security-advisories": "dev-latest",
        "vimeo/psalm": "^5.7"
    },
    "autoload": {
        "psr-4": { "Sandwich\\ViesBundle\\": "src" }
    },
    "autoload-dev": {
        "psr-4": {
            "Sandwich\\ViesBundle\\Tests\\": "tests"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
